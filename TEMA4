public class Main {
    public static void main(String[] args) {
        int numeroif=5;
        int numeroWhile=0;
        var estacion= "otoño";


        //Sentencia if

        if (numeroif>0){
            System.out.println("El número es positivo");

        }
        else if (numeroif<0){
            System.out.println("El número es negativo");
        }
        else
            System.out.println("El número es 0");

        //sentencia while

        while(numeroWhile<3){

            System.out.println(numeroWhile);
            numeroWhile++;

        }

        //Sentencia do while

        do{
            System.out.println(numeroWhile);
            numeroWhile++;
        }
            while (numeroWhile<3);

        //Sentencia for

        for(int numeroFor=0;numeroFor<=3;numeroFor++)
        {
            System.out.println(numeroFor);

        }

        //Sentencia Swtich

        switch (estacion) {
            case "verano":
            case "otoño":
            case"invierno":
            case "primavera":
                System.out.println("Es la estación"+ " " + estacion);
                break;
            default:
                System.out.println("no es una estación");


        }
    }


}
